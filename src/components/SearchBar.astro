---
import { Icon } from "astro-icon/components";
import { useTranslations } from "@/i18n";

const { locale } = Astro.props;
const t = useTranslations(locale);
---

<button class="btn--search" title={t("nav.open-search")}>
  <Icon name="mdi:search" size={25} />
</button>

<dialog class="search-dialog">
  <section class="search-dialog__info">
    <p>{t("nav.search-info")}</p>

    <button class="btn--close" title={t("nav.close-search")}>
      <Icon name="mdi:close" size={25} />
    </button>
  </section>

  <div id="search">
    <Icon name="mdi:search" class="pagefind-ui__icon" size={30} />
  </div>
</dialog>

<script is:inline slot="script" src="/pagefind/pagefind-ui.js"></script>

<script src="../scripts/search.ts"></script>

<style>
  .btn--search,
  .btn--close {
    padding: 1.2rem;
  }

  .search-dialog__info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-block-end: 1rem;
  }

  .btn--close:hover {
    outline: 1px solid var(--primary);
  }

  .search-dialog {
    border: 2px solid var(--outline-color-mute);
    padding: 1rem;
    width: min(80ch, 100%);
    height: min(70vh, 100%);
    box-shadow: 0 2px 8px var(--outline-color-mute);
  }

  .search-dialog::backdrop {
    backdrop-filter: blur(0.5rem);
  }
</style>

<style is:global>
  #search {
    position: relative;
    font-family: inherit;
    --search-gutter: 0.5rem;
  }

  .pagefind-ui__suppressed,
  .pagefind-ui__hidden {
    display: none;
  }

  .pagefind-ui__icon,
  .pagefind-ui__search-clear {
    position: absolute;
  }

  .pagefind-ui__icon {
    top: var(--search-gutter);
    left: var(--search-gutter);
  }

  .pagefind-ui__search-clear {
    top: 0;
    right: 0;
    padding: 0.5rem;
  }

  .pagefind-ui__search-input {
    border: none;
    outline: 2px solid var(--outline-color-mute);
    padding-inline: 4rem 1rem;
    padding-block: var(--search-gutter);
    width: 100%;
    height: 100%;
  }

  .pagefind-ui__search-input:focus-within {
    outline: 4px solid var(--outline-color-secondary);
  }

  .pagefind-ui__drawer {
    padding: 1rem;
    padding-block-end: 2rem;
    z-index: 2;

    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
  }

  .pagefind-ui__results {
    margin: 0;
    padding: 0;
    list-style: none;

    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .pagefind-ui__result {
    background: var(--secondary);
    display: flex;
    gap: 0.5em;
  }

  .pagefind-ui__result-thumb {
    max-width: 15ch;
    aspect-ratio: 16/9;
  }

  .pagefind-ui__result-inner {
    padding: 1rem;
  }

  .pagefind-ui__result-inner p {
    margin-block: 0 0.5rem;
    font-size: 0.95rem;
  }

  .pagefind-ui__button {
    background: var(--secondary);
    outline: 1px solid var(--primary);
    margin-block: 1rem;
    padding: 1em 2em;

    display: inline-block;
    cursor: pointer;
  }
</style>
